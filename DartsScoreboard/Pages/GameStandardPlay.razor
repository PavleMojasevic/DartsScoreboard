@namespace DartsScoreboard
@page "/gameStandardPlay"

@if (WinnerPopup)
{
    <div class="winner-popup">
        <h2>@Players[CurrentPlayerIndex].Name wins! 🏆</h2>
        <h3>Player average: @Players[CurrentPlayerIndex].Stats.ThreeDartAverage.ToString("F2")</h3>
        <h3>Player checkaut [%]: @Players[CurrentPlayerIndex].Stats.CheckoutPercentage.ToString("F2")%</h3>
        <button @onclick="ResetGame">Restart</button>
    </div>
}
else
{
    <div class="players">
        @foreach (var player in Players)
        {
            <div class="player-box @(Players[CurrentPlayerIndex].Id == player.Id ? "current-player" : "")">
                <h3>@player.Name</h3>
                <p>Score: @PlayerScores[player.Id][0]</p>
            </div>
        }
    </div>

    <div class="input-area">
        <div class="input-display">
            <h2>Input: @InputScore</h2>

            <div class="submit-button">
                <button class="btn btn-success" @onclick="SubmitScore">
                    Submit
                </button>
            </div>
        </div>

        <div class="keyboard-container">
            <Keyboard KeyboardParameters="KeyboardParams" KeyClick="HandleKey" />
        </div>
    </div>
}
@if (ShowCheckoutPopup)
{
    <div class="modal-overlay">
        <div class="modal-box">

            <h4>Checkout Information</h4>

            <!-- Darts at double -->
            <div class="mb-2">
                <label>Number of darts thrown at double:</label>
                <div class="btn-group mt-1" role="group">
                    @for (int i = 0; i < AvailableDoubleDartOptions.Count; i++)
                    {
                        var option = AvailableDoubleDartOptions[i];
                        <button type="button"
                                class="btn @(SelectedNumOfDarts == option ? "btn-primary" : "btn-outline-primary")"
                                @onclick="() => OnSelectNumOfDarts(option)">
                            @option
                        </button>
                    }
                </div>
            </div>

            <!-- Darts used to checkout (if applicable) -->
            @if (AvailableCheckoutDartOptions != null && AvailableCheckoutDartOptions.Count > 0)
            {
                <div class="mb-2">
                    <label>Number of darts used for checkout:</label>
                    <div class="btn-group mt-1" role="group">
                        @for (int i = 0; i < AvailableCheckoutDartOptions.Count; i++)
                        {
                            var option = AvailableCheckoutDartOptions[i];
                            <button type="button"
                                    class="btn @(SelectedDartsUsedOnCheckout == option ? "btn-primary" : "btn-outline-primary")"
                                    @onclick="() => OnSelectDartsUsedOnCheckout(option)">
                                @option
                            </button>
                        }
                    </div>
                </div>
            }

            <!-- Buttons -->
            <div class="mt-3">
                <button class="btn btn-success me-2" @onclick="ConfirmCheckoutData">Confirm</button>
                <button class="btn btn-danger" @onclick="CloseCheckoutPopup">Cancel</button>
            </div>

        </div>
    </div>
}

